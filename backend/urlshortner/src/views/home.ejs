<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <h1>URL shortner</h1>
    <% if (locals.id) { %>
        <p>URL Generread : https://localhost/url/<%= id %></p>
    <% } %>
    <div>
        <form action="/url" method="post">
            <label for="">Enter Your orignal URL</label>
            <input type="text"
            name="url"
            placeholder="url">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. No</th>
                    <th>ShortID</th>
                    <th>Redirects</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>

                            <td><%= index+1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                        
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
